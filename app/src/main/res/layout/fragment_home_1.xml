<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:scrollbars="vertical">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="302dp">
        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="88dp"
            android:layout_height="77dp"
            android:src="@drawable/dish1"
            android:id="@+id/imageView1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="20元"
            android:id="@+id/tv_dishprice1"
            android:layout_alignBottom="@+id/tv_dishname1"
            android:layout_toEndOf="@+id/imageView1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="回锅肉"
            android:textSize="15dp"
            android:id="@+id/tv_dishname1"
            android:layout_weight="0.21"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:id="@+id/btn_buy1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="88dp"
            android:layout_height="77dp"
            android:src="@drawable/dish2"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="80元"
            android:id="@+id/tv_dishprice2"
            android:layout_alignBottom="@+id/tv_dishname2"
            android:layout_toEndOf="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="油闷大虾"
            android:textSize="15dp"
            android:id="@+id/tv_dishname2"
            android:layout_weight="0.21"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:id="@+id/btn_buy2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="88dp"
            android:layout_height="77dp"
            android:src="@drawable/dish3"
            android:id="@+id/imageView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="28元"
            android:id="@+id/tv_dishprice3"
            android:layout_alignBottom="@+id/tv_dishname3"
            android:layout_toEndOf="@+id/imageView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="鱼香肉丝"
            android:textSize="15dp"
            android:id="@+id/tv_dishname3"
            android:layout_weight="0.21"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:id="@+id/btn_buy3"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <!--<ListView-->
        <!--android:id="@+id/lv1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"></ListView>-->
</LinearLayout>
</ScrollView>
